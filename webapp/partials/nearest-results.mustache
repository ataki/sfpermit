<div class="head">
  <span class="s-h3">Sort by</span>
  <span class="sort-by proximity text-primary">Proximity</span>
  <span class="sort-by risk text-primary">Risk</span>
  <span class="sort-by units text-primary">Net Units</span>
  <a class="close">&times;</a> 
</div>
<ul>
    {{#collection}}
    <li class="model-row" data-id="{{id}}">
        <a href="#">
            {{#isApproved}}
            <span class="label label-success">A</span>
            {{/isApproved}}
            {{#isCancelled}}
            <span class="label label-default">C</span>
            {{/isCancelled}}
            {{#isOpen}}
            <span class="label label-primary">O</span>
            {{/isOpen}}
            &nbsp;&nbsp;
            <strong>{{project_name}}</strong>
            <br/>
            <span>{{days}} days old</span>, 
            <span>{{net_units}} units</span>
            {{#prediction}}
            ,<br/>
            <span><b>{{prediction}}</b> chance of success</span>
            {{/prediction}}
        </a>
    </li>
    {{/collection}}
</ul>
